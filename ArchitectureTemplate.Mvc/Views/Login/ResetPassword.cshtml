@model ArchitectureTemplate.Mvc.Models.LoginModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Password Reset";
}

<section id="wrapper">
    <div id="shop">
        <header id="page-title">
        </header>

        <section class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="white-row">
                        <h3><strong>Password Reset</strong></h3>
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle"></i>
                            <strong>How is it works?</strong>
                            <p>
                                Your new password must have...
                            </p>
                        </div>

                        @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new {@class = "form-horizontal"}))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                            @Html.HiddenFor(model => model.Login)
                            @Html.HiddenFor(model => model.CodigoRecover)

                            <div class="form-group">
                                @Html.LabelFor(model => model.NewPassword, new {@class = "col-sm-3 control-label"})
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.NewPassword, new {htmlAttributes = new {@class = "form-control", @placeholder = "Enter your new passwor", @required = "required"}})
                                    @Html.ValidationMessageFor(model => model.NewPassword, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ConfirmPassword, new {@class = "col-sm-3 control-label"})
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.ConfirmPassword, new {htmlAttributes = new {@class = "form-control", @placeholder = "Confirm your new passwor", @required = "required"}})
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <input type="submit" value="Save" class="btn btn-primary pull-right btn-specific">
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}