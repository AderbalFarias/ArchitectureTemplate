@model ArchitectureTemplate.Mvc.Models.PerfilModel
@{
    ViewBag.Title = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="white-row">
    <h3>
        <strong>Editar Perfil</strong>
    </h3>

    @using (Html.BeginForm("Edit", "Perfil", FormMethod.Post, new { @id = "formPerfil" }))
    {
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.DataCadastro)

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-3" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @required = true, @maxlength = 50, @placeholder = "Informe o nome do perfil" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Solicitante, new {@class = "control-label col-md-3"})
                <div class="col-md-7">
                    @Html.EditorFor(model => model.Solicitante, new {htmlAttributes = new {@class = "form-control", @required = true, @maxlength = 100, @placeholder = "Informe o nome do solicitante",}})
                    @Html.ValidationMessageFor(model => model.Solicitante, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ativo, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Ativo)
                        @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value="Salvar" class="btn btn-primary btn-specific" />
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-primary btn-specific" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}